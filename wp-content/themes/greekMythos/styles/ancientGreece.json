{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "title": "Ancient Greece",
  "settings": {
    "color": {
      "palette": [
        { "color": "#e0ddd5", "name": "White", "slug": "white" },
        { "color": "#283d70", "name": "Primary", "slug": "primary" },

        {
          "color": "#2e3546",
          "name": "Secondary",
          "slug": "secondary"
        },
        { "color": "#c6934b", "name": "Accent", "slug": "accent" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Lancelot, sans-serif",
          "name": "Lancelot",
          "slug": "lancelot"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lancelot)"
    },
    "blocks": {
      "core/navigation": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--white)"
        }
      },
      "core/paragraph": {
        "color": {
          "text": "var(--wp--preset--color--accent)"
        }
      },
      "core/query": {
        "color": {
          "background": "var(--wp--preset--color--accent)",
          "text": "var(--wp--preset--color--white)"
        }
      },
      "core/post-excerpt":{
       "color": {
          "text": "var(--wp--preset--color--#ffffff)"
        }
      }
    }
  }
}
