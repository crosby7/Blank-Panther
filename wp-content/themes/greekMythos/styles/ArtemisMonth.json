{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "title": "Artemis Month",
  "settings": {
    "color": {
      "palette": [
        { "color": "#eeeeee", "name": "White", "slug": "white" },
        { "color": "#cae1e1", "name": "Primary", "slug": "primary" },
        { "color": "#000000", "name": "Text", "slug": "text" },
        {
          "color": "#c6dddd",
          "name": "Secondary",
          "slug": "secondary"
        },
        { "color": "#d8e5e5", "name": "Accent", "slug": "accent" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Avenir, sans-serif",
          "name": "Avenir",
          "slug": "avenir",
          "fontFace": [
            {
              "fontFamily": "avenir",
              "src": ["file:./wp-content/uploads/fontsAvenir.ttc"]
            }
          ]
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--accent)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--avenir)"
    },
    "blocks": {
      "core/navigation": {
        "color": {
          "background": "var(--wp--preset--color--secondary)",
          "text": "var(--wp--preset--color--black)"
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--black)"
        }
      },
      "core/query": {
        "color": {
          "background": "var(--wp--preset--color--accent)",
          "text": "var(--wp--preset--color--black)"
        }
      },
      "core/post-title": {
        "color": {
          "text": "var:preset|color|black"
        },
        "spacing": {
          "margin": {
            "top": "40px"
          }
        }
      },

      "core/post-author-name": {
        "color": {
          "text": "var:preset|color|black"
        },
        "typography": {
          "fontWeight": "700"
        }
      }
    }
  }
}