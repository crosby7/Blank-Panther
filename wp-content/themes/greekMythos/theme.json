{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        { "color": "#ffffff", "name": "white", "slug": "white" },
        { "color": "#fff68f", "name": "Primary", "slug": "primary" },
        { "color": "#cd6600", "name": "Secondary", "slug": "secondary" },
        { "color": "#8b2500", "name": "Accent", "slug": "accent" },
        { "color": "#000000", "name": "black", "slug": "black" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Cochin, sans-serif",
          "name": "Cochin",
          "slug": "cochin",
          "fontFace": [
            {
              "fontFamily": "cochin",
              "src": ["file:./wp-content/uploads/cochin.ttc"]
            }
          ]
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "background": {}
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--cochin)"
    },
    "color": {
      "background": "var(--wp--preset--color--secondary)"
    },
    "elements": {},
    "spacing": {
      "padding": {
        "left": "40px",
        "right": "40px"
      }
    },
    "blocks": {
      "core/navigation": {
        "color": {
          "text": "var(--wp--preset--color--white)",
          "background": "var(--wp--preset--color--accent)"
        },
        "typography": {
          "fontSize": "1.2rem"
        },
        "spacing": {
          "padding": {
            "bottom": "10px",
            "left": "20px",
            "right": "20px",
            "top": "10px"
          }
        }
      },
      "core/query": {
        "color": {
          "background": "var(--wp--preset--color--primary)"
        },
        "spacing": {
          "padding": {
            "left": "20px",
            "right": "20px",
            "top": "10px",
            "bottom": "10px"
          }
        },
        "border": {
          "top": {
            "color": "var(--wp--preset--color--accent)",
            "style": "solid",
            "width": "2px"
          },
          "bottom": {
            "color": "var(--wp--preset--color--accent)",
            "style": "solid",
            "width": "2px"
          },
          "radius": "20px"
        }
      },
      "core/heading": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "core/post-title": {
        "color": {
          "text": "var:preset|color|accent"
        },
        "spacing": {
          "margin": {
            "top": "40px"
          }
        }
      },
      "core/post-author-name": {
        "color": {
          "text": "var:preset|color|secondary"
        },
        "typography": {
          "fontWeight": "700"
        }
      },
      "core/post-navigation-link": {
        "color": {
          "text": "var:preset|color|accent"
        },
        "elements": {
          "link": {
            ":hover": {
              "color": {
                "text": "var:preset|color|secondary"
              }
            }
          }
        }
      },
      "core/post-featured-image": {
        "dimensions": {
          "maxWidth": "1200px",
          "maxHeight": "300px"
        }
      },
      "core/image": {
        "dimensions": {
          "maxWidth": "1200px"
        },
        "spacing": {
          "margin": {
            "left": "auto",
            "right": "auto"
          }
        }
      },
      "core/paragraph": {
        "dimensions": {
          "maxWidth": "800px"
        }
      }
    }
  }
}
